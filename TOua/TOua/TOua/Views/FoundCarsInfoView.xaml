<?xml version="1.0" encoding="utf-8" ?>
<viewBase:ContentPageBaseView
    x:Class="TOua.Views.FoundCarsInfoView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:TOua.Controls"
    xmlns:dependency="clr-namespace:TransportAndOwner.ViewModels.Base"
    xmlns:ffimagesvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:viewBase="clr-namespace:TOua.Views.Base"
    dependency:DependencyLocator.AutoWireViewModel="True"
    BackgroundColor="{StaticResource Key=White}">
    <viewBase:ContentPageBaseView.MainContent>

        <Grid>
            <!--  Substarate  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <BoxView Grid.Row="0" BackgroundColor="{StaticResource Key=Blue}" />
            </Grid>

            <!--  Page content scope  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Pseudo action bar  -->
                <Grid Grid.Row="0" Padding="20,25">

                    <ContentView Padding="40,0">
                        <controls:LabelExtended
                            FontFamily="{StaticResource Key=OpenSansBold}"
                            FontSize="{StaticResource Key=BigTitles}"
                            FormattedText="{Binding Path=TargetCarId, Converter={StaticResource Key=CarId_string_to_formated_string_converter}}"
                            HorizontalOptions="Center"
                            LineBreakMode="TailTruncation"
                            TextColor="{StaticResource Key=White}"
                            VerticalOptions="Center" />
                    </ContentView>

                    <ContentView
                        HeightRequest="37"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        WidthRequest="37">
                        <ContentView.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Path=BackCommand}" />
                        </ContentView.GestureRecognizers>

                        <ffimagesvg:SvgCachedImage
                            HorizontalOptions="Center"
                            Rotation="90"
                            Source="resource://TOua.Resources.Images.ic_arrow_down.svg"
                            TranslationY="2"
                            VerticalOptions="Center" />
                    </ContentView>
                </Grid>

                <Grid Grid.Row="1" RowSpacing="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Results scope output  -->
                    <Grid>
                        <!--  Inform label  -->
                        <controls:LabelExtended
                            Margin="20,0"
                            FontFamily="{StaticResource Key=OpenSansRegular}"
                            FontSize="{StaticResource Key=TextInputs}"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Path=InformText}"
                            TextColor="{StaticResource Key=Black}"
                            VerticalOptions="Center" />
                        <ListView
                            x:Name="_carsInfoList_StackList"
                            HasUnevenRows="True"
                            ItemsSource="{Binding Path=FoundCars}"
                            SeparatorVisibility="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid Margin="20,3" Padding="0,0,0,2">
                                            <!--  Shadow  -->
                                            <controls:ExtendedContentView
                                                BackgroundColor="Black"
                                                CornerRadius="7"
                                                Opacity=".02"
                                                Scale="1.01"
                                                TranslationY="1" />

                                            <!--  Info card  -->
                                            <controls:ExtendedContentView
                                                Padding="20,23"
                                                BackgroundColor="White"
                                                CornerRadius="7">
                                                <controls:ExtendedContentView.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.ViewCarInfoDetailsCommand, Source={Reference Name=_carsInfoList_StackList}}" CommandParameter="{Binding}" />
                                                </controls:ExtendedContentView.GestureRecognizers>
                                                <StackLayout Spacing="9">
                                                    <controls:LabelExtended
                                                        FontFamily="{StaticResource Key=OpenSansSemiBold}"
                                                        FontSize="{StaticResource Key=PageTitles}"
                                                        Text="{Binding Path=OperCode}"
                                                        TextColor="{StaticResource Key=DeepBlue}" />
                                                    <controls:LabelExtended
                                                        FontFamily="{StaticResource Key=OpenSansSemiBold}"
                                                        FontSize="{StaticResource Key=ParagraphText}"
                                                        HorizontalOptions="Start"
                                                        HorizontalTextAlignment="Start"
                                                        LetterSpacing=".025"
                                                        LineBreakMode="WordWrap"
                                                        LineHeight="1.1"
                                                        Text="{Binding Path=OperName}"
                                                        TextColor="{StaticResource Key=Black}" />
                                                </StackLayout>
                                            </controls:ExtendedContentView>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>

                    <!--  Bottom common info  -->
                    <StackLayout
                        Grid.Row="1"
                        Padding="20,0,20,6"
                        Spacing="0">
                        <controls:LabelExtended
                            FontFamily="{StaticResource Key=OpenSansRegular}"
                            FontSize="{StaticResource Key=HintText}"
                            HorizontalTextAlignment="Center"
                            LineHeight=".8"
                            Text="Актуальна інформація станом на 31.08.2018"
                            TextColor="{StaticResource Key=LightGray}" />

                        <controls:LabelExtended
                            FontFamily="{StaticResource Key=OpenSansRegular}"
                            FontSize="{StaticResource Key=HintText}"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            LineHeight=".8"
                            Text="data.gov.ua"
                            TextColor="{StaticResource Key=Blue}">
                            <controls:LabelExtended.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Path=NavigateToSourceCommand}" />
                            </controls:LabelExtended.GestureRecognizers>
                        </controls:LabelExtended>
                    </StackLayout>
                </Grid>
            </Grid>
        </Grid>
    </viewBase:ContentPageBaseView.MainContent>
</viewBase:ContentPageBaseView>